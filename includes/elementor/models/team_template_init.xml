<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <template>
        <name>List of Teams</name>
        <container>
            <![CDATA[
<!--
==============================
TEMPLATE VARIABLES:
==============================
  'title'
  'content'
  'pagination'
==============================
-->
<header class="page-header">
	<h1>{{{title}}}</h1>
</header>

<div class="elementor-teamtally-team__template__01">
  <div class="content">
    <div class="header">Team Name</div>
    <div class="header">Team NickName</div>
    <div class="header">League Name</div>
    {{{content}}}
  </div>
  <nav class="pagination">{{{pagination}}}</nav>
</div>
            ]]>
        </container>
        <item>
            <![CDATA[
<!--
==============================
TEMPLATE VARIABLES:
==============================
  'league_id'
  'team_id'
  'team_name'
  'team_nickname'
  'team_history'
  'team_logo_url'
  'league_name'
  'league_country'
  'league_logo_url'
  'class'
==============================
-->
<div class="{{{class}}}"><a href="/team-detail/?team_id={{{team_id}}}">{{{team_name}}}</a></div>
<div class="{{{class}}}">{{{team_nickname}}}</div>
<div class="{{{class}}}">{{{league_name}}}</div>
            ]]>
        </item>
    </template>

    <template>
        <name>Team Detail</name>
        <container>
            <![CDATA[
<!--
==============================
TEMPLATE VARIABLES:
==============================
  'title'
  'content'
  'pagination'
==============================
-->
<div class="elementor-teamtally-team__template__02">
  <div class="content">
    {{{content}}}
  </div>
  <nav class="pagination">{{{pagination}}}</nav>
</div>
            ]]>
        </container>
        <item>
            <![CDATA[
<!--
==============================
TEMPLATE VARIABLES:
==============================
  'league_id'
  'team_id'
  'team_name'
  'team_nickname'
  'team_history'
  'team_logo_url'
  'league_name'
  'league_country'
  'league_logo_url'
  'class'
==============================
-->
<header class="page-header">
	<h1>Team: {{{team_name}}}</h1>
</header>

<div class="teamtally-team-detail">
    <section class="team-metadata">
        <h1>Nickname</h1>
        <p>{{{team_nickname}}}</p>

        <h1>League</h1>
        <p>{{{league_name}}}</p>
    </section>
    <div class="team-history">{{{team_history}}}</div>
    <div class="team-logo">
        <img src="{{{team_logo_url}}}" alt="">
    </div>
</div>
            ]]>
        </item>
    </template>

</templates>